<h1>Edit Order</h1>

<%  @user_orders.each do |order| %>
<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


        <div class="col-md-4">
          <p>Name: <%= order.outlet_produce.produce.name %></p>
        </div>
        <div class="col-md-4">
          <p>Quantity Available: <%= order.outlet_produce.quantity %></p>
        </div>
        <div class="col-md-4">
          <p>Cost: <%= order.cost %></p>
        </div>
        <div class="field">
          <%= f.label :QTY%>
          <%= f.number_field :quantity_bought  %>
        </div>
        <div class="field">
          <%= f.label :User%>
          <%= f.text_field :user_id, :value => current_user.id %>
        </div>
        <div class="field">
          <%= f.label :outlet_produce_id%>
          <%= f.text_field :outlet_produce_id, :value => order.outlet_produce.id %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", class:"btn btn-default" %>
        </div>
  <% end %>
  <% end %>
